<% layout("layouts/boilerplate") %>
<style>
  .loginform{
    display: flex;
    height: 70vh;
    width: 60vw;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    font-family: lato;
    color: white;
  }
  .desc{
    width: 50%;
    color: #232946;
    background-color: white;
    /* display: flex;
    flex-direction: column; */
    /* justify-content: space-evenly; */
    /* justify-content: center; */
  }
  .form{
    width: 50%;
    background-image: url(https://images.unsplash.com/photo-1504470695779-75300268aa0e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80);
    background-position: bottom;
  }
  .social-media{
    display: flex;
    margin: auto;
    width: 50%;
    justify-content: space-evenly;
    height: 10vh;
    margin-top: 20px;
  }
  .social-media i{
    color: #232946;
    font-size: 30px;
    cursor: pointer;
  }
  .formforsignin{
    width: 80%;
    margin: auto;
  }
  .content1,.mainc{
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
  .btns{
     margin-top: 20px;
 }
 .btns a{
    text-decoration: none;
    color: white;
 }
 .btns button{
     cursor: pointer;
     padding: 5px;
     border: 1px solid white;
     background-color: #003566;
     color: white;
     border-radius: 10px;
     padding-left: 20px;
     padding-right: 20px;
     font-weight: bold;
     width: 100%;
 }
 
 .btns button:hover{
    transform: scale(1.05);
    transition: all 0.2s;
    border: 1px solid #003566;
 }

 @media screen and (max-width:1000px) {
   
   .loginform{
     flex-direction: column;
     box-shadow: none;
     width: 90%;
   }
   .desc{
     width: 100%;
     height: 100%;
   }
   .social-media{
     width: 80%;
   }
   .formforsignin{
     width: 100%;
   }
 }
</style>
<div class="loginform">
  <div class="form">
   
  </div>
  <div class="desc">
    <div class="mainc">
      <p style="font-size: 30px;text-align:center">Sign in to get Started</p>
      <hr style="height: 3px;background-color:#04359f; border: none; width: 45%; margin: auto;">
      <div class="social-media">
        <i class="fa-brands fa-facebook"></i>
        <i class="fa-brands fa-google-plus-square"></i>
        <i class="fa-brands fa-linkedin"></i>
      </div>
      <div class="formforsignin">
        <p style="text-align: center;font-size: 14px;">Or Sign In Using Username and Password</p>
          <form action="/login" style="margin: auto;" class="validated-form" novalidate method="POST" >
            <div class="mb-3">
              <label for="username" class="form-label">UserName</label>
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                placeholder="Enter your Username"
                required
              />
              <div class="valid-feedback">Going Good!</div>
            </div>
            
            <div class="mb-3">
              <label for="password" class="form-label">password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Enter your password"
                required
              />
              <div class="valid-feedback">Going Good!</div>
            </div>
            <div class="btns" >
              <button >Login </button>
          </div>
          </form>
      </div>
    </div>
  </div>
</div>