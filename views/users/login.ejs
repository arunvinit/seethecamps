<% layout("layouts/boilerplate") %>
<div class="loginform">
  <h2 style="text-align: center;" class="mb-3">Login Form</h2>
<form action="/login" style="margin: auto;" class="validated-form" novalidate method="POST" >
  <div class="mb-3">
    <label for="username" class="form-label">UserName</label>
    <input
      type="text"
      class="form-control"
      id="username"
      name="username"
      placeholder="Enter your Username"
      required
    />
    <div class="valid-feedback">Going Good!</div>
  </div>
  
  <div class="mb-3">
    <label for="password" class="form-label">password</label>
    <input
      type="password"
      class="form-control"
      id="password"
      name="password"
      placeholder="Enter your password"
      required
    />
    <div class="valid-feedback">Going Good!</div>
  </div>
  <button class="btn btn-success">Login</button>
</form>
</div>