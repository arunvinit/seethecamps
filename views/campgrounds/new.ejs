
<% layout("layouts/boilerplate") %>
<style>
  .loginform{
    display: flex;
    height: auto;
    width: 60vw;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background-color: #232946;
    font-family: lato;
    color: white;
  }
  .desc{
    width: 50%;
    color: #232946;
    background-color: white;
    /* display: flex;
    flex-direction: column; */
    /* justify-content: space-evenly; */
    /* justify-content: center; */
  }
  .form{
    width: 50%;
    background-image: url(https://images.unsplash.com/photo-1504470695779-75300268aa0e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80);
    background-position: bottom;
  }
  .social-media{
    display: flex;
    margin: auto;
    width: 50%;
    justify-content: space-evenly;
    height: 10vh;
    margin-top: 20px;
  }
  .social-media i{
    color: #232946;
    font-size: 30px;
    cursor: pointer;
  }
  .formforsignin{
    width: 80%;
    margin: auto;
  }
  .content1,.mainc{
    position: relative;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
  }
  .btns{
     margin-top: 20px;
 }
 .btns a{
    text-decoration: none;
    color: white;
 }
 .btns button{
     cursor: pointer;
     padding: 5px;
     border: 1px solid white;
     background-color: #003566;
     color: white;
     border-radius: 10px;
     padding-left: 20px;
     padding-right: 20px;
     font-weight: bold;
     width: 100%;
 }
 
 .btns button:hover{
    transform: scale(1.05);
    transition: all 0.2s;
    border: 1px solid #003566;
 }

 @media screen and (max-width:1000px) {
   /* .form{
    display: none;
   } */
   .loginform{
     flex-direction: column;
     width: 90%;
   }
   .mainc{
       position: absolute;
       width: 90%;
   }
   .desc{
     width: 100%;
     height: 100%;
   }
   .social-media{
     width: 80%;
   }
   .formforsignin{
     width: 100%;
   }
 }
</style>
<div class="loginform">
  <div class="form">
   
  </div>
  <div class="desc">
    <div class="mainc">
      <p style="font-size: 30px;text-align:center">Add new Campground</p>
      
      <div class="formforsignin">
        <p style="text-align: center;font-size: 14px;">Enter details to add a new Campground</p>
        <form action="/campground" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
            <label for="title" class="form-label">Title </label>
            <input type="text" class="form-control" name="campground[title]" placeholder="Title" id="title" required>
            <div class="valid-feedback">
                Going Good!
            </div>
            </div>
            <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" name="campground[location]" placeholder="location" required>
            <div class="valid-feedback">
                Going Good!
            </div>
            </div>
            <label for="inputGroupFile04" class="mb-3">Upload images</label>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="image" multiple>
              </div>
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Going Good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" id="description" name="campground[description]" placeholder="Description" required></textarea>
                <div class="valid-feedback">
                    Going Good!
                </div>
            </div>
            <button class="btn btn-success">Add This Campground</button>
        </form>
      </div>
    </div>
  </div>
</div>

