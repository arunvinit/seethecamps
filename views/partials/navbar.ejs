.toggle .one{
    transform: rotate(-45deg) translate(-5px,6px);
}
.toggle .two{
    opacity: 0;
}
.toggle .three{
    transform: rotate(45deg) translate(-5px,-6px);
}


.main{
    color: black;
    height: 97vh;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: cover;
    background-repeat: no-repeat;
    overflow-x: hidden;
}

.innermain{
    background-color: rgba(0, 0, 0,0.5);
    height: 100%;
    width: 102%;
    margin-top: -5px;
    margin-left: -5px;
    margin-right: -108px;
