 }
 .btns button{
     cursor: pointer;
     padding: 10px;
     border: 1px solid white;
     color: white;
     background-color: #1bc44b;
     border-radius: 5px;
     padding-left: 20px;
     padding-right: 20px;
     font-weight: bold;
 }

 .links button{
    cursor: pointer;
     padding: 8px;
     border: 1px solid white;
     color: white;
     background-color: #003566;
     border-radius: 5px;
     padding-left: 20px;
     padding-right: 20px;
 }
 .links span{
     padding: 5px;
     background-color: #003566;
     border-radius: 5px;
     padding-left: 20px;
     padding-right: 20px;
 }

 .img{
    width: 40%;
    height: 100%;
    background-size: cover;
    display: flex;
    align-items: center;
    /* background-image: url(https://images.unsplash.com/photo-1449034446853-66c86144b0ad?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80); */
}
.img img{
    width: 100%;
    height: auto;
}
 

@keyframes ex{
    0%   {background-color:red; left:-15px; top:15px;}
    25%  {background-color:yellow; left:135px; top:15px;}
    50%  {background-color:blue; left:135px; top:55px;}
    75%  {background-color:green; left:-15px; top:55px;}
    100% {background-color:red; left:-15px; top:15px;}
}
@keyframes an{
    from{
        transform: translateY(-100%);
    }to{
        transform: translateY(0%);
    }
}


@media screen and ( max-width:750px) {
    body{
        overflow-x: hidden;
    }
    .links{
        /* display: none; */
        position: absolute;
        opacity: 0;
        pointer-events: none;
    }
    .links button{
        
    }
    .linksshow{
        display: flex;
        opacity: 1;
        pointer-events: auto;
        width: 100%;
        position: absolute;
        flex-direction: column;
        top: 8vh;
        height: 30vh;
        background-color: rgba(0, 0, 0,1);
        transition: opacity 0.5s ease-in-out ;
    }
    .links a{
        color: white;
    }
    .links button{
        color: white;
    }
    /* .links li{
        opacity: 0;
        
    } */
    .logo{
        margin-left: 0;
    }
    .main{
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin-top: 40px;
        width: 100%;
    }
    .img{
        justify-content: start;
        margin-top: 40px;
        width: 100%;
        height: 60vh;
    }
    .img img{
        width: 100vw;
        height: 100%;
    }
    .burger{
        display: block;
    }
    .content{
        width: 97%;
        text-align: center;
        /* position: absolute; */
        /* top: 30%; */
    }
}
@media screen and (max-width: 1200px) and (min-width: 750px){
    .nav{
